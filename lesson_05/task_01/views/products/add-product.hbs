
<section class="add-product-section">
  <div class="product-form__container container-product-form">
    <h1 class="container-product-form__title">Новий транспорт</h1>
    <form class="container-product-form__form form-products" action="/products/add" method="POST">
        <div class="form-group">
          <label for="brand">Марка:</label>
          <input type="text" id="brand" name="brand" required> 
        </div>

        <div class="form-group">
          <label for="model">Модель:</label>
          <input type="text" id="model" name="model" required>
        </div>

        <div class="form-group">
          <label for="year">Рік випуску:</label>
          <input type="number" id="year" name="year" required>
        </div>

        <div class="form-group">
          <label for="number">Номер:</label>
          <input type="text" id="number" name="number" required>
        </div>

        <button class="form-button" type="submit">Додати транспорт</button>
    </form>
  </div>
</section>

